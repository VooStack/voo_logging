!extension/devtools/build/*.js
!extension/devtools/build/*.js.map

# Flutter plugins
.flutter-plugins
.flutter-plugins-dependencies

# DevTools extension - ignore dev files but KEEP build output
extension/devtools/.dart_tool/
extension/devtools/.flutter-plugins
extension/devtools/.flutter-plugins-dependencies
extension/devtools/pubspec.lock
extension/devtools/.packages
